{
	"name": "wc-category-showcase",
	"version": "2.2.8",
	"description": "WooCommerce extension to showcase categories in various styles and layouts like sliders, blocks, and grids.",
	"author": "ByteEver Team",
	"license": "GPL-2.0-or-later",
	"homepage": "https://pluginever.com/plugins/woocommerce-category-showcase-pro/",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pluginever/wc-category-showcase.git"
	},
	"bugs": {
		"url": "https://github.com/pluginever/wc-category-showcase/issues"
	},
	"engines": {	
		"node": ">=20.11.1"
	},
	"dependencies": {
		"tailwindcss-inner-border": "^0.2.0"
	},
	"devDependencies": {
		"@byteever/scripts": "^3.0.2",
		"@wordpress/browserslist-config": "^6.33.0",
		"@wordpress/prettier-config": "^4.33.0",
		"@wordpress/scripts": "^31.1.0",
		"tailwindcss": "^3.4.17",
		"@splidejs/splide": "^4.1.4",
		"@splidejs/splide-extension-auto-scroll": "^0.5.3",
		"@splidejs/splide-extension-grid": "^0.4.1"
	},
	"scripts": {
		"build": "wp-scripts build && composer run makepot",
		"build:wp": "wp-scripts build && composer run makepot",
		"start": "wp-scripts start",
		"lint": "npm run lint:js && npm run lint:css",
		"lint:js": "wp-scripts lint-js",
		"lint:css": "wp-scripts lint-style",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"format:js": "wp-scripts format",
		"update": "npx npm-check-updates -u && npm i"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"autoprefixer": {
				"grid": "autoplace"
			},
			"cssnano": {
				"preset": [
					"default",
					{
						"minifyFontValues": {
							"removeQuotes": false
						},
						"colormin": false
					}
				]
			},
			"css-declaration-sorter": {
				"order": "smacss"
			}
		}
	}
}
